{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2022"
    ],
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "outDir": "./dist/",
    "types": ["vitest/globals"],
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}
