{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2022"
    ],
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "noEmit": true,
    "types": ["vitest/globals"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "pure-ui-actions": ["../../src/pure-ui-actions.ts"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}
